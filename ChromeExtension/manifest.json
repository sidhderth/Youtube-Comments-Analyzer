{
    "manifest_version": 3,
    "name": "YouTube Comment Sentiment Analyzer",
    "version": "1.0",
    "description": "An extension to analyze the sentiment of YouTube comments.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon/icon16.png",
            "48": "icon/icon48.png",
            "128": "icon/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["content.js"]
        }
    ]
}
